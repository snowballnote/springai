<script>
    $("#sendBtn").click(sendMessage);

    $("#userMessage").keydown(function(e) {
        if (e.key === "Enter" && !e.shiftKey) {
            e.preventDefault();
            sendMessage();
        }
    });

    function sendMessage() {
        if ($("#userMessage").val().trim() === "") {
            alert("ë©”ì„¸ì§€ë¥¼ ì…ë ¥í•˜ì„¸ìš”");
            return;
        }

        const chatMessageRequest = {
            userId: "user10",
            userMessage: $("#userMessage").val().trim()
        };
        $("#chatBox").append(
        	   `<div class="chat YOU">${$("#userMessage").val()}</div>`
        );

        $("#chatBox").scrollTop($("#chatBox")[0].scrollHeight);
        
        $.ajax({
            url: "http://localhost:8080/chatMessage",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(chatMessageRequest),
            success: function(data) {
                data.forEach(function(item) {
                    $("#chatBox").append(
                        `<div class="chat ${item.who}">${item.message}</div>`
                    );
                });

                // í•­ìƒ ìµœì‹  ë©”ì‹œì§€ë¡œ ìŠ¤í¬ë¡¤
                $("#chatBox").scrollTop($("#chatBox")[0].scrollHeight);
            },
            error: function(err) {
                alert("ì‹¤íŒ¨: " + err);
            }
        });

        $("#userMessage").val("");
    }
    $(function () {
        $("#chatBox").append(`
            <div class="chat AI">
                ì•ˆë…•í•˜ì„¸ìš” ğŸ˜Š<br>
                ì‡¼í•‘ëª° ê³ ê°ì„¼í„° ì±—ë´‡ì…ë‹ˆë‹¤.<br>
                ê¶ê¸ˆí•œ ì ì„ í¸í•˜ê²Œ ì…ë ¥í•´ ì£¼ì„¸ìš”!
            </div>
        `);
    });
