package com.example.openai0113.controller;

import org.springframework.ai.chat.model.ChatResponse;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.openai0113.dto.SentimentResponse;
import com.example.openai0113.service.ImageModelService;
import com.example.openai0113.service.Test2Service;


@CrossOrigin
@RestController
public class TestController {
	@Autowired private Test2Service test2Service;
	@Autowired private ImageModelService imageModelService;
	
	@PostMapping("/test6")
	public String test6(@RequestBody String userMessage) {
		return imageModelService.getImageResponse(userMessage);
	}	
	
	@PostMapping("/test5")
	public SentimentResponse test5(@RequestBody String userMessage) {
		return test2Service.getSentimentResponse(userMessage);
	}
	
	@PostMapping("/test4")
	public SentimentResponse test4(@RequestBody String userMessage) {
		return test2Service.getSentimentResponse(userMessage);
	}
	
	@PostMapping("/test3")
	public ChatResponse test3(@RequestBody String userMessage) {
		return test2Service.getChatResponse(userMessage);
	}
s}
