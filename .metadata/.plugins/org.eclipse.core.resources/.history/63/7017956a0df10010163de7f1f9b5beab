<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    .chat-wrapper {
        width: 420px;
        margin: 20px auto;
    }

    #chatBox {
        height: 450px;
        background-color: #b2c7da;
        padding: 15px;
        overflow-y: auto;
        border-radius: 12px;
        box-sizing: border-box;
    }

    .chat {
        max-width: 70%;
        padding: 10px 14px;
        border-radius: 18px;
        margin-bottom: 12px;
        line-height: 1.4;
        word-break: break-word;
        clear: both;
    }

    .YOU {
        background-color: #fff48f;
        float: right;
        border-bottom-right-radius: 4px;
    }

    .AI {
        background-color: #ffffff;
        float: left;
        border-bottom-left-radius: 4px;
    }

    .input-area {
        display: flex;
        margin-top: 10px;
        gap: 8px;
    }

    #userMessage {
        flex: 1;
        padding: 10px 14px;
        border-radius: 20px;
        border: 1px solid #ccc;
        outline: none;
        font-size: 14px;
    }

    #sendBtn {
        padding: 10px 18px;
        border-radius: 20px;
        border: none;
        background-color: #ffeb3b;
        font-weight: bold;
        cursor: pointer;
    }
