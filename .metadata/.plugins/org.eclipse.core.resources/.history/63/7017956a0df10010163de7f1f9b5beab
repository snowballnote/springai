<body>
<h1>쇼핑몰 Chat Bot</h1>

<div class="chat-wrapper">
    <div id="chatBox"></div>

    <div class="input-area">
        <input type="text" id="userMessage" placeholder="메시지를 입력하세요">
        <button type="button" id="sendBtn">전송</button>
    </div>
</div>

<script>
    $("#sendBtn").click(sendMessage);

    $("#userMessage").keydown(function(e) {
        if (e.key === "Enter") sendMessage();
    });

    function sendMessage() {
        if ($("#userMessage").val().trim() === "") {
            alert("메세지를 입력하세요");
            return;
        }

        const chatMessageRequest = {
            userId: "user10",
            userMessage: $("#userMessage").val().trim()
        };

        $.ajax({
            url: "http://localhost:8080/chatMessage",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(chatMessageRequest),
            success: function(data) {
                data.forEach(function(item) {
                    $("#chatBox").append(
                        `<div class="chat ${item.who}">${item.message}</div>`
                    );
                });

                // 항상 최신 메시지로 스크롤
                $("#chatBox").scrollTop($("#chatBox")[0].scrollHeight);
            },
            error: function(err) {
                alert("실패: " + err);
            }
        });

        $("#userMessage").val("");
    }
</script>

</body>
</html>
