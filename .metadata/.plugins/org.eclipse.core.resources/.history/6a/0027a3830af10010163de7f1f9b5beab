    /* 전체 챗 컨테이너 */
    .chat-wrapper {
        width: 420px;
        margin: 20px auto;
    }

    /* 채팅 박스 */
    #chatBox {
        height: 450px;
        background-color: #b2c7da;
        padding: 15px;
        overflow-y: auto;
        border-radius: 12px;
        box-sizing: border-box;
    }

    /* 공통 말풍선 */
    .chat {
        max-width: 70%;
        padding: 10px 14px;
        border-radius: 18px;
        margin-bottom: 12px;
        line-height: 1.4;
        word-break: break-word;
        clear: both;
    }

    /* 사용자 */
    .YOU {
        background-color: #fff48f;
