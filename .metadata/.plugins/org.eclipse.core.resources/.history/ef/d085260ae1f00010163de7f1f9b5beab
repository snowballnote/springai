package com.example.openai0113.controller;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.example.openai0113.service.OPENAITestService;

//@CrossOrigin
@RestController
public class OPENAITestController {
	private final OPENAITestService openaiTestService;
	public OPENAITestController(OPENAITestService openaiTestService) {
		this.openaiTestService = openaiTestService;
	}
	
	@PostMapping("/test")
	public String test(@RequestBody String userMessage) {
		return openaiTestService.chat(userMessage);
	}
	
	@PostMapping("/test2")
	public String test2(@RequestBody String userMessage) {
		return openaiTestService.chat2(userMessage);
	}
}